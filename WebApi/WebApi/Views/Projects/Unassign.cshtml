@model WebApi.Models.DataModels.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Unassign</h1>

<h3>Are you sure you want to unassign?</h3>
<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        @{
            var parameterValue = (Model.Creator?.FirstName ?? "") + " " + (Model.Creator?.LastName ?? "");
        }
        <dd class="col-sm-10">
            @Html.DisplayFor(model => parameterValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UpdatedDate)
        </dd>
    </dl>

    <form asp-action="Unassign">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Unassign" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
