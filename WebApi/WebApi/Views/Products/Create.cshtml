@model WebApi.Models.DataModels.ProductCreateDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <asp:RegularExpressionValidator id="Unit"
                                            ControlToValidate="Unit"
                                            ValidationExpression="g|kg|t"
                                            Display="Static"
                                            ErrorMessage="Must be one of (g,kg,t)."
                                            EnableClientScript="False"
                                            runat="server" />
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control" asp-items="ViewBag.Units"></select>
            </div>
            <asp:RegularExpressionValidator id="WeightInGrams"
                                            ControlToValidate="WeightInGrams"
                                            ValidationExpression="^(0*[1-9][0-9]*(\.[0-9]+)?|0+\.[0-9]*[1-9][0-9]*)$"
                                            Display="Static"
                                            ErrorMessage="Must be greater than 0."
                                            EnableClientScript="False"
                                            runat="server" />
            <div class="form-group">
                <label asp-for="WeightInGrams" class="control-label"></label>
                <input asp-for="WeightInGrams" class="form-control" />
                <span asp-validation-for="WeightInGrams" class="text-danger"></span>
            </div>
            <asp:RegularExpressionValidator id="CarbonOutputPerGram"
                                            ControlToValidate="CarbonOutputPerGram"
                                            ValidationExpression="^(0*[1-9][0-9]*(\.[0-9]+)?|0+\.[0-9]*[1-9][0-9]*)$"
                                            Display="Static"
                                            ErrorMessage="Must be greater than 0."
                                            EnableClientScript="False"
                                            runat="server" />
            <div class="form-group">
                <label asp-for="CarbonOutputPerGram" class="control-label"></label>
                <input asp-for="CarbonOutputPerGram" class="form-control" />
                <span asp-validation-for="CarbonOutputPerGram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
